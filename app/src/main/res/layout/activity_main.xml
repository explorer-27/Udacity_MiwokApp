<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ashut.miwok.MainActivity">

    <TextView
        android:id="@+id/tvNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFF0000"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/numbers"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvFamilyMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFB7FF00"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/familyMembers"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFC800"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/colors"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvPhrases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FF0090FF"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/phrases"
        android:textSize="40sp" />
</LinearLayout>
